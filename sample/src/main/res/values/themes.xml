<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidMediaProcessor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--        <item name="colorOutline">@color/color_outline</item>-->
        <item name="colorOutline">?attr/colorPrimary</item>
        <item name="colorAccent">@color/pink_a400</item>

        <!--        <item name="colorSurface">@color/white</item>-->
        <!--        <item name="colorOnSurface">@color/black</item>-->
        <!--        <item name="colorSurfaceVariant">@color/black</item>-->
        <!--        <item name="colorOnSurfaceVariant">@color/white</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="iconColor">?attr/colorSecondary</item>
        <item name="noRecIconColor">@color/orange_300</item>
        <item name="recIconColor">@color/pink_a400</item>
        <item name="stopIconColor">@color/blue_a400</item>

        <item name="panelBackgroundColor">#40000000</item>
        <!-- libPlayer theme -->
        <item name="playerBackground">@color/white</item>
    </style>

    <style name="Theme.AndroidMediaProcessor" parent="Base.Theme.AndroidMediaProcessor">
    </style>

</resources>